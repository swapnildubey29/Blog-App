<div class="admin-title">
  <h2>Add New Post</h2>
</div>

<form action="/add-post" method="POST">

  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title" required>

  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10"></textarea>

  <input type="submit" value="Add" class="btn">

</form>

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
<script>
  tinymce.init({
    selector: 'textarea', 
    plugins: 'link image code table lists',
    toolbar: 'undo redo | bold italic underline | alignleft aligncenter alignright | numlist bullist | link image table | code',
    height: 300
  });
</script>
